{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "automerge": true, // renovate will merge PRs if they pass all checks
  "automergeStrategy": "rebase",
  "platformAutomerge": true, // renovate use github native merge API endpoint for merging
  "schedule": [
    "before 2am"
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  }
}
